{
  "name": "forget-me-not",
  "description": "Fansite for Japanese guitarist, You",
  "version": "0.0.1",
  "author": "Sarah Norris",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikachan/forget-me-not"
  },
  "scripts": {
    "build": "npm run build:tailwind && sapper build",
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "export": "npm run build:tailwind && sapper export",
    "start": "run-p start:dev watch:tailwind",
    "start:build": "node __sapper__/build",
    "start:dev": "sapper dev",
    "validate": "svelte-check --ignore src/node_modules/@sapper",
    "cz": "npx cz"
  },
  "dependencies": {
    "autoprefixer": "^10.2.0",
    "compression": "^1.7.1",
    "polka": "next",
    "postcss": "^8.2.2",
    "sapper-google-analytics": "^1.0.2",
    "sirv": "^1.0.0",
    "tailwindcss": "2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.12.11",
    "@babel/runtime": "^7.0.0",
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@rollup/plugin-replace": "^2.2.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@rollup/plugin-url": "^6.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/compression": "^1.7.0",
    "@types/node": "^14.14.20",
    "@types/polka": "^0.5.2",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.17.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1",
    "postcss-nesting": "^7.0.1",
    "rollup": "^2.36.1",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sapper": "^0.28.0",
    "svelte": "^3.31.2",
    "svelte-check": "^1.1.25",
    "svelte-preprocess": "^4.3.0",
    "tslib": "^2.1.0",
    "typescript": "^4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
